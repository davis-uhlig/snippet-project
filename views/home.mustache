  <h2>Welcome {{username}}</h2>
  <nav class="main-nav">
    <div class="nav-titles">
      <h4 class="nav-links"><a href="/home">View All Snippets</a></h4>
      <h4 class="nav-links"><a href="/my-snippets">View My Snippets</a></h4>
      <h4 class="nav-links"><a href="/create-snippet">Create A Snippet</a></h4>
      <!-- <h4 class="nav-links">Logged In As {{username}}</h4> -->
    </div>
  </nav>
  <div class="tag-search">
    <form action="/tag-search" method="post">
      <label for="tag">Search for a specific tag</label>
      <input id="tag" type="text" name="tag" placeholder="tag">
      <button type="submit" name="button">Submit</button>
    </form>
  </div>

  <div class="language-search">
    <form action="/language-search" method="post">
      <label for="language">Search for a specific language</label>
      <input id="language" type="text" name="language" placeholder="language">
      <button type="submit" name="button">Submit</button>
    </form>
  </div>

    {{#snippets}}
    <div class="snippet-list">
      <form class="" action="/user-page/{{userId}}" method="post">
        <button id="user-button" type="submit" name="button">creator: <strong>{{snippetUser}}</strong></button>
      </form>
    <!-- <p>{{snippetUser}}</p> -->
    <p>title: {{title}} ({{language}})</p>
    <p>body: {{body}}</p>
    <p>notes: {{notes}}</p>
    <p>tags: {{tags}}</p>
    <p>stars: {{stars}}</p>
    <p>{{createdAt}}</p>
    </div>
    <!-- <form action="/home/{{id}}/delete" method="post">
